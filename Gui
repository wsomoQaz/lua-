-- 保留的 OrionLib 框架结构
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/wsomoQaz/lua-/main/Xcccc"))()

local Window = OrionLib:MakeWindow({
    IntroText = "缝合脚本",  -- 加载动画文字
    Name = "缝合脚本 " .. identifyexecutor(), -- 脚本名字，显示执行器
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = ""
})

-- 创建一个功能 Tab
local Tab = Window:MakeTab({
    Name = "功能",
    Icon = "rbxassetid://7733779610", -- 图标素材ID
    PremiumOnly = false
})


Tab:AddToggle({
    Name = "开关名称",
    Default = false,
    Callback = function(Value)
        -- 服务引用
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- 要发送的参数
local args = {
    13,
    "Standard",
    false,
    "Silver Pickaxe",
    0.85
}

-- 自动攻击线程（每秒执行50次）
while true do
    for i = 1, 50 do
        -- 安全执行一次调用
        pcall(function()
            ReplicatedStorage:WaitForChild("RemoteEvent"):WaitForChild("HitBox"):FireServer(unpack(args))
        end)
    end
    wait(1) -- 每秒执行一次循环
end
    end
})